<UserControl x:Class="SFDepedSharp.Views.Students"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:SFDepedSharp.Views.components"
             xmlns:local="clr-namespace:SFDepedSharp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
            
             >
    <Grid>
        <StackPanel Margin="60 0 10 0">
            
        <Label>Students</Label>
        <uc:TextBoxCustom Grid.Column="0" Grid.Row="2" Caption="Learner Reference Number" Hint="Enter learner reference number"/>
        <uc:TextBoxCustom Grid.Column="0" Grid.Row="2" Caption="Last Name" Hint="Enter last name"/>
        <uc:TextBoxCustom Grid.Column="0" Grid.Row="2" Caption="Middle Name" Hint="Enter middle name"/>
        <uc:TextBoxCustom Grid.Column="0" Grid.Row="2" Caption="Complete Name" Hint="Enter complete name"/>
        <uc:TextBoxCustom Grid.Column="0" Grid.Row="2" Caption="Date of admision" Hint="Enter date of admision"/>
        <uc:TextBoxCustom Grid.Column="0" Grid.Row="2" Caption="Name of School" Hint="Enter name of school"/>
        </StackPanel>
        
    </Grid>
</UserControl>
